{
  "name": "einsatzmonitor",
  "version": "2.1.2",
  "main": "src/main/dist/renderrer-bundle.js",
  "scripts": {
    "old_start": "electron .",
    "publish": "electron-builder  --win --linux -p always",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dev:electron_old": "webpack --config webpack.config.js --mode development && electron .",
    "dev:webpack": "webpack-dev-server --progress --colors --hot --inline --mode development",
    "dev:electron": "set NODE_ENV=dev && electron .",
    "dist:webpack": "webpack --mode development"
  },
  "devDependencies": {
    "@babel/core": "^7.11.1",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@types/node": "^14.17.0",
    "@types/toastr": "^2.1.38",
    "@types/webpack-env": "^1.15.2",
    "babel-loader": "^8.1.0",
    "electron": "^10.2.0",
    "electron-builder": "^22.3.2",
    "html-loader": "^1.3.0",
    "html-webpack-plugin": "^4.4.1",
    "raw-loader": "^4.0.1",
    "script-loader": "^0.7.2",
    "textfit": "github:STRML/textFit#master",
    "ts-loader": "^8.0.2",
    "typescript": "^3.9.7",
    "webpack": "^4.44.1",
    "webpack-cli": "^3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "@sentry/browser": "^5.4.3",
    "@sentry/electron": "^0.17.0",
    "@types/auto-launch": "^5.0.1",
    "@types/bootstrap-colorpicker": "^2.5.2",
    "@types/electron-settings": "^3.1.1",
    "@types/jquery": "^3.5.1",
    "@types/knockout": "^3.4.70",
    "@types/reconnectingwebsocket": "^1.0.4",
    "auto-launch": "^5.0.5",
    "axios": "^0.19.2",
    "crypto-js": "^4.0.0",
    "electron-log": "^4.3.0",
    "electron-settings": "^4.0.2",
    "electron-updater": "^4.0.6",
    "fitty": "^2.3.2",
    "graceful-fs": "^4.2.4",
    "knockout": "^3.5.1",
    "moment": "^2.27.0",
    "mqtt": "^4.2.6",
    "nouislider": "^14.6.1",
    "reconnectingwebsocket": "^1.0.0",
    "toastr": "^2.1.4"
  },
  "build": {
    "productName": "EinsatzMonitor",
    "appId": "com.github.finn0811.einsatzmonitor-frontend",
    "nsis": {
      "oneClick": false,
      "artifactName": "${productName}-${version}-win-Setup.${ext}"
    },
    "files": [
      "**/*",
      "!**/*.ts"
    ],
    "extraFiles": [
      {
        "from": "build/",
        "to": ".",
        "filter": [
          "EinsatzMonitor.VisualElementsManifest.xml",
          "icon.png"
        ]
      }
    ],
    "win": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64",
            "ia32"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32"
          ]
        }
      ]
    },
    "linux": {
      "artifactName": "${productName}-${version}-${os}-${arch}.${ext}",
      "target": [
        {
          "target": "zip",
          "arch": [
            "x64",
            "ia32",
            "armv7l",
            "arm64"
          ]
        },
        {
          "target": "AppImage",
          "arch": [
            "x64",
            "ia32",
            "armv7l",
            "arm64"
          ]
        }
      ]
    }
  }
}
